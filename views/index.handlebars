<div class="container">
    <div class="jumbotron">
        <div class="row">
            <h1>
                <span id="a">Mongoscraper</span>
            </h1>
        </div>
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-2">
                <button class="btn btn-danger btn-lg" id="scrape">Scrape</button>
            </div>
            <div class="col-sm-2">
                <button class="btn btn-danger btn-lg" id="clear">Clear</button>
            </div>
        </div>
        <div class="row" id="pans">
            {{#each article}}
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-10">
                            <h3>{{this.title}}</h3>
                        </div>
                        <div class="col-sm-2">
                            <button type="button" class="btn btn-info btn-danger getNote" data-id="{{this._id}}" data-toggle="modal" data-target="#myModal">Notes</button>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <a href="{{this.link}}">Link: {{this.link}}</a>
                    <p>{{this.body}}</p>
                </div>
                <div id="myModal" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Your Note</h4>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <label for="comment">Note:</label>
                                    <textarea class="form-control" rows="5" id="body">Write Your Note</textarea>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default addNote" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            {{/each}}
        </div>
    </div>
</div>